<UserControl x:Class="CcDirector.Wpf.Controls.TextViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">

    <UserControl.InputBindings>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{x:Static ApplicationCommands.Save}" />
    </UserControl.InputBindings>

    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Save}" Executed="SaveCommand_Executed" CanExecute="SaveCommand_CanExecute" />
    </UserControl.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="8,4" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- File path display -->
                <TextBlock x:Name="FilePathText" Grid.Column="0"
                           Foreground="#888888" FontSize="11"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" />

                <!-- Word wrap toggle and save -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Save button (visible when dirty) -->
                    <Button x:Name="SaveButton" Content="Save"
                            FontSize="11" Padding="8,2"
                            Background="#3C3C3C" Foreground="#CCCCCC"
                            BorderThickness="0" Cursor="Hand"
                            Margin="0,0,8,0"
                            Visibility="Collapsed"
                            Click="SaveButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#505050" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Word wrap toggle -->
                    <Button x:Name="WrapToggleButton" Content="Wrap"
                            FontSize="11" Padding="8,2"
                            Background="#3C3C3C" Foreground="#CCCCCC"
                            BorderThickness="0" Cursor="Hand"
                            Click="WrapToggleButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#505050" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Open in external application -->
                    <Button x:Name="OpenExternalButton" Content="Open"
                            FontSize="11" Padding="8,2"
                            Background="#3C3C3C" Foreground="#CCCCCC"
                            BorderThickness="0" Cursor="Hand"
                            Margin="8,0,0,0"
                            Click="OpenExternalButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Open with default application"
                                          Click="OpenDefault_Click" />
                                <MenuItem Header="Open with..."
                                          Click="OpenWith_Click" />
                            </ContextMenu>
                        </Button.ContextMenu>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#505050" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Text editor -->
        <TextBox x:Name="EditorBox" Grid.Row="1"
                 FontFamily="Cascadia Mono, Consolas, Courier New"
                 FontSize="13"
                 Background="#1E1E1E"
                 Foreground="#D4D4D4"
                 CaretBrush="#D4D4D4"
                 BorderThickness="0"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 Padding="24,16"
                 TextChanged="EditorBox_TextChanged" />

        <!-- Loading overlay -->
        <TextBlock x:Name="LoadingText" Grid.Row="1"
                   Text="Loading..."
                   Foreground="#888888" FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed" />
    </Grid>
</UserControl>
