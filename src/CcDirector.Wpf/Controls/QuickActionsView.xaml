<UserControl x:Class="CcDirector.Wpf.Controls.QuickActionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PanelBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT COLUMN: Thread List -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}"
                BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Header -->
                <DockPanel DockPanel.Dock="Top" Margin="8,10,8,4">
                    <TextBlock Text="THREADS"
                               Foreground="{StaticResource TextForeground}"
                               FontWeight="SemiBold"
                               FontSize="12"
                               VerticalAlignment="Center" />
                </DockPanel>

                <!-- New Thread button -->
                <Button x:Name="BtnNewThread" DockPanel.Dock="Top"
                        Content="+ New Thread"
                        Click="BtnNewThread_Click"
                        Focusable="False"
                        Height="30" Margin="8,2,8,6"
                        Background="{StaticResource AccentBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand" />

                <!-- Thread list -->
                <ListBox x:Name="ThreadList"
                         SelectionChanged="ThreadList_SelectionChanged"
                         IsTabStop="False"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="{StaticResource TextForeground}"
                         Margin="4,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="IsTabStop" Value="False" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,4,4,4">
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Rename" Click="MenuRenameThread_Click" />
                                        <Separator />
                                        <MenuItem Header="Delete" Click="MenuDeleteThread_Click" />
                                    </ContextMenu>
                                </Grid.ContextMenu>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Text="{Binding Title}"
                                           Foreground="#CCCCCC"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Preview}"
                                           Foreground="#888888"
                                           FontSize="11"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,2,0,0" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="3"
                      Background="{StaticResource PanelBackground}"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Focusable="False" />

        <!-- RIGHT COLUMN: Chat Area -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Empty state -->
            <TextBlock x:Name="ChatPlaceholder" Grid.Row="0"
                       Text="Select a thread or create a new one to start chatting"
                       Foreground="#555555"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="14" />

            <!-- Chat messages -->
            <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="0"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="Collapsed">
                <ItemsControl x:Name="ChatMessages" Padding="16,12">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4,0,4"
                                    Padding="12,8"
                                    CornerRadius="6"
                                    MaxWidth="700"
                                    HorizontalAlignment="{Binding Alignment}"
                                    Background="{Binding BubbleBackground}">
                                <TextBlock Text="{Binding Content}"
                                           Foreground="{Binding TextColor}"
                                           FontSize="13"
                                           FontFamily="Segoe UI, Cascadia Mono"
                                           TextWrapping="Wrap"
                                           LineHeight="20" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Input bar -->
            <Border x:Name="InputBar" Grid.Row="1"
                    Background="{StaticResource SidebarBackground}"
                    BorderBrush="#3C3C3C" BorderThickness="0,1,0,0"
                    Padding="12,8"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="MessageInput"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinLines="2"
                             MinHeight="40"
                             MaxHeight="160"
                             VerticalScrollBarVisibility="Auto"
                             Background="#1E1E1E"
                             Foreground="#CCCCCC"
                             CaretBrush="#CCCCCC"
                             BorderBrush="#3C3C3C"
                             BorderThickness="1"
                             Padding="8,6"
                             FontFamily="Segoe UI, Cascadia Mono"
                             FontSize="13"
                             KeyDown="MessageInput_KeyDown" />
                    <Button x:Name="BtnSend" Grid.Column="1"
                            Content="Send"
                            Click="BtnSend_Click"
                            Width="60" Height="30"
                            Margin="8,0,0,0"
                            VerticalAlignment="Bottom"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
