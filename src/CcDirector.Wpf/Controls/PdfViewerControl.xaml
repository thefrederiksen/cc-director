<UserControl x:Class="CcDirector.Wpf.Controls.PdfViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="8,4" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <TextBlock x:Name="FilePathText"
                       Foreground="#888888" FontSize="11"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}" />
        </Border>

        <!-- WebView2 PDF viewer -->
        <wv2:WebView2 x:Name="PdfWebView" Grid.Row="1"
                      DefaultBackgroundColor="#1E1E1E" />

        <!-- Loading overlay -->
        <TextBlock x:Name="LoadingText" Grid.Row="1"
                   Text="Loading..."
                   Foreground="#888888" FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
    </Grid>
</UserControl>
