<Window x:Class="CcDirector.Wpf.WindowsTerminalWarningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Terminal Detected"
        Width="480" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#252526">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title with warning -->
        <TextBlock Grid.Row="0"
                   Text="[!] Windows Terminal Detected"
                   Foreground="#FFA500"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16" />

        <!-- Explanation -->
        <TextBlock Grid.Row="1"
                   Foreground="#CCCCCC"
                   FontSize="13"
                   TextWrapping="Wrap"
                   Margin="0,0,0,16">
            <Run Text="Embedded mode cannot work with Windows Terminal as the default terminal." />
            <LineBreak /><LineBreak />
            <Run Text="Windows Terminal intercepts console windows, making them invisible to CC Director's overlay system." />
        </TextBlock>

        <!-- What we'll do -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="To fix this, CC Director will change your default terminal to Windows Console Host."
                       Foreground="#CCCCCC"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8" />
            <TextBlock Text="This only affects how command prompts open - you can change it back anytime in Windows Settings."
                       Foreground="#888888"
                       FontSize="11"
                       FontStyle="Italic"
                       TextWrapping="Wrap" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Apply and Continue" Width="130"
                    Click="BtnApply_Click"
                    Background="#007ACC" Foreground="White"
                    BorderThickness="0" Margin="0,0,8,0"
                    Height="28" Cursor="Hand"
                    IsDefault="True" />
            <Button Content="Cancel" Width="80"
                    Click="BtnCancel_Click"
                    Background="#3C3C3C" Foreground="#CCCCCC"
                    BorderThickness="0"
                    Height="28" Cursor="Hand"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
