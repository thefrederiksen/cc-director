<Window x:Class="CcDirector.Wpf.RepositoryManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Repository Manager"
        Width="950" Height="620"
        MinWidth="700" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#252526">

    <Window.Resources>
        <!-- Action bar button style: readable when disabled, not invisible -->
        <Style x:Key="ActionBarButton" TargetType="Button">
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Margin" Value="0,0,4,0" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.7" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.35" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" MinWidth="160" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Left Panel: Root Directories -->
        <Border Grid.Column="0" Grid.Row="0" Background="#1E1E1E"
                BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" Margin="10,10,10,6">
                    <TextBlock Text="ROOT DIRECTORIES"
                               Foreground="#888888" FontSize="11" FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                    <Button Content="+ Add" Click="BtnAddRoot_Click"
                            HorizontalAlignment="Right"
                            Padding="10,3" FontSize="11"
                            Background="#007ACC" Foreground="White"
                            BorderThickness="0" Cursor="Hand" />
                </DockPanel>

                <!-- Show All button -->
                <Button x:Name="BtnShowAll" DockPanel.Dock="Top"
                        Content="Show All" Click="BtnShowAll_Click"
                        Margin="8,0,8,6" Height="26" FontSize="11"
                        Background="#3C3C3C" Foreground="#CCCCCC"
                        BorderThickness="0" Cursor="Hand" />

                <ListBox x:Name="RootList"
                         SelectionChanged="RootList_SelectionChanged"
                         Background="Transparent" BorderThickness="0"
                         Foreground="#CCCCCC" Margin="4,0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,0,0,2" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="Transparent"
                                                Padding="8,6" CornerRadius="4">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#094771" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#2A2D2E" />
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True" />
                                                    <Condition Property="IsMouseOver" Value="True" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Bd" Property="Background" Value="#094771" />
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="{Binding Label}" FontSize="13" FontWeight="Medium"
                                               Foreground="#CCCCCC" />
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <Button Content="✎" Tag="{Binding}" Click="BtnEditRoot_Click"
                                                FontSize="11" Padding="4,1" Margin="0,0,2,0"
                                                Background="Transparent" Foreground="#888888"
                                                BorderThickness="0" Cursor="Hand" ToolTip="Edit" />
                                        <Button Content="✕" Tag="{Binding}" Click="BtnRemoveRoot_Click"
                                                FontSize="11" Padding="4,1"
                                                Background="Transparent" Foreground="#CC4444"
                                                BorderThickness="0" Cursor="Hand" ToolTip="Remove" />
                                    </StackPanel>
                                </DockPanel>
                                <TextBlock Text="{Binding ProviderDisplayName}" FontSize="10"
                                           Foreground="#007ACC" Margin="0,2,0,0" />
                                <TextBlock Text="{Binding Path}" FontSize="10"
                                           Foreground="#666666" TextTrimming="CharacterEllipsis"
                                           Margin="0,1,0,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Grid.Row="0" Width="3"
                      Background="#252526" HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" Focusable="False" />

        <!-- Right Panel: Repo List -->
        <Grid Grid.Column="2" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Filter + Refresh -->
            <DockPanel Grid.Row="0" Margin="12,10,12,6">
                <Button Content="↻ Refresh" Click="BtnRefresh_Click"
                        DockPanel.Dock="Right"
                        Padding="10,4" FontSize="12"
                        Background="#3C3C3C" Foreground="#CCCCCC"
                        BorderThickness="0" Cursor="Hand" Margin="8,0,0,0" />
                <Grid>
                    <TextBox x:Name="FilterBox"
                             Background="#1E1E1E" Foreground="#CCCCCC" CaretBrush="#CCCCCC"
                             BorderBrush="#3C3C3C" BorderThickness="1"
                             Padding="8,6" FontSize="13"
                             TextChanged="FilterBox_TextChanged" />
                    <TextBlock Text="Filter repositories..."
                               Foreground="#666666" FontSize="13"
                               Padding="10,7" IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=FilterBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </DockPanel>

            <!-- Loading indicator -->
            <TextBlock x:Name="LoadingText" Grid.Row="1"
                       Text="Select a root directory or click Refresh..."
                       Foreground="#666666" FontSize="13" FontStyle="Italic"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />

            <!-- Repo list -->
            <ListBox x:Name="RepoList" Grid.Row="1"
                     Margin="8,0,8,0"
                     Background="Transparent" BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionChanged="RepoList_SelectionChanged"
                     MouseDoubleClick="RepoList_MouseDoubleClick"
                     Visibility="Collapsed">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="8,6" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            BorderBrush="#333333" BorderThickness="0,0,0,1">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#094771" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2D2E" />
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True" />
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#094771" />
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Name + root label -->
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Medium"
                                           Foreground="#CCCCCC" />
                                <TextBlock Text="{Binding Subtitle}" FontSize="10"
                                           Foreground="#666666" Margin="0,1,0,0"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <!-- Status badge -->
                            <Border Grid.Column="1" CornerRadius="8" Padding="8,2"
                                    Margin="8,0" VerticalAlignment="Center"
                                    Background="{Binding StatusBackground}">
                                <TextBlock Text="{Binding StatusText}" FontSize="10"
                                           Foreground="{Binding StatusForeground}"
                                           FontWeight="SemiBold" />
                            </Border>

                            <!-- Where badge -->
                            <Border Grid.Column="2" CornerRadius="3" Padding="6,2"
                                    Margin="0,0,8,0" VerticalAlignment="Center"
                                    Background="#333333">
                                <TextBlock Text="{Binding WhereText}" FontSize="10"
                                           Foreground="#999999" />
                            </Border>

                            <!-- Action button -->
                            <Button Grid.Column="3" Content="{Binding ActionText}"
                                    Tag="{Binding}" Click="BtnRepoAction_Click"
                                    Padding="8,3" FontSize="11"
                                    Background="{Binding ActionBackground}"
                                    Foreground="{Binding ActionForeground}"
                                    BorderThickness="0" Cursor="Hand"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding ActionVisibility}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Action bar for selected repo -->
            <Border Grid.Row="2" Background="#1E1E1E"
                    BorderBrush="#3C3C3C" BorderThickness="0,1,0,0"
                    Padding="12,8">
                <DockPanel>
                    <TextBlock x:Name="SelectedRepoText" DockPanel.Dock="Left"
                               Text="" Foreground="#888888" FontSize="11"
                               VerticalAlignment="Center" Margin="0,0,12,0" />
                    <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button x:Name="BtnLaunchSession" Content="Launch Session"
                                Click="BtnLaunchSession_Click"
                                Style="{StaticResource ActionBarButton}"
                                Background="#007ACC" Foreground="White"
                                IsEnabled="False" />
                        <Button x:Name="BtnOpenExplorer" Content="Open Explorer"
                                Click="BtnOpenExplorer_Click"
                                Style="{StaticResource ActionBarButton}"
                                Background="#3C3C3C" Foreground="#CCCCCC"
                                IsEnabled="False" />
                        <Button x:Name="BtnOpenVsCode" Content="Open VS Code"
                                Click="BtnOpenVsCode_Click"
                                Style="{StaticResource ActionBarButton}"
                                Background="#3C3C3C" Foreground="#CCCCCC"
                                IsEnabled="False" />
                        <Button x:Name="BtnCloneSelected" Content="Clone"
                                Click="BtnCloneSelected_Click"
                                Style="{StaticResource ActionBarButton}"
                                Background="#3C3C3C" Foreground="#CCCCCC"
                                IsEnabled="False" />
                        <Button x:Name="BtnDeleteLocal" Content="Delete Local"
                                Click="BtnDeleteLocal_Click"
                                Style="{StaticResource ActionBarButton}"
                                Background="#3C3C3C" Foreground="#CC4444"
                                Margin="0"
                                IsEnabled="False" />
                    </WrapPanel>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                Background="#1E1E1E" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0"
                Padding="12,6">
            <DockPanel>
                <TextBlock x:Name="StatusBarText" Text="Ready"
                           Foreground="#888888" FontSize="11"
                           VerticalAlignment="Center" />
                <TextBlock x:Name="LastRefreshText" DockPanel.Dock="Right"
                           Text="" Foreground="#666666" FontSize="10"
                           HorizontalAlignment="Right" VerticalAlignment="Center" />
            </DockPanel>
        </Border>
    </Grid>
</Window>
