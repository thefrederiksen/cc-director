<Window x:Class="CcDirector.Wpf.Voice.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Input (Type)"
        Width="450" Height="200"
        WindowStartupLocation="CenterOwner"
        Background="#252526"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Microphone unavailable. Type your message instead:"
                   Foreground="#9CA3AF"
                   FontSize="12"
                   Margin="0,0,0,8" />

        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 AcceptsReturn="False"
                 TextWrapping="Wrap"
                 Background="#1E1E1E"
                 Foreground="#CCCCCC"
                 CaretBrush="#CCCCCC"
                 BorderBrush="#3C3C3C"
                 BorderThickness="1"
                 Padding="8"
                 FontSize="14"
                 VerticalScrollBarVisibility="Auto"
                 KeyDown="InputTextBox_KeyDown" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Cancel"
                    Click="BtnCancel_Click"
                    Width="80" Height="30"
                    Margin="0,0,8,0"
                    Background="#374151"
                    Foreground="#D1D5DB"
                    BorderThickness="0"
                    Cursor="Hand" />
            <Button x:Name="BtnSend"
                    Content="Send"
                    Click="BtnSend_Click"
                    Width="80" Height="30"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>
