<Window x:Class="VoiceChat.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Chat - Claude Code"
        Width="1280" Height="800"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PanelBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <!-- ============ LEFT: Conversation Log ============ -->
        <Grid Grid.Column="0" Background="{StaticResource SidebarBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="CONVERSATION" Style="{StaticResource PanelHeader}"/>

            <ScrollViewer Grid.Row="1"
                          x:Name="ChatScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Padding="8,0">
                <ItemsControl ItemsSource="{Binding Messages}" x:Name="ChatList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4,2" Padding="8,6" CornerRadius="6"
                                    MaxWidth="270" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#094771"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Role}" Value="user">
                                                <Setter Property="Background" Value="#3C3C3C"/>
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="{Binding Role}" FontSize="10"
                                               Foreground="#808080" Margin="0,0,0,2"
                                               FontFamily="Segoe UI"/>
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap"
                                               Foreground="#CCCCCC" FontSize="13"
                                               FontFamily="Segoe UI"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Separator -->
        <Rectangle Grid.Column="1" Fill="{StaticResource BorderBrush}"/>

        <!-- ============ CENTER: Push-to-Talk + Status ============ -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Center area with talk button -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Mic icon placeholder -->
                <TextBlock Text="MIC" FontSize="16" FontWeight="Bold"
                           Foreground="{StaticResource TextDimmed}"
                           HorizontalAlignment="Center" Margin="0,0,0,16"
                           FontFamily="Segoe UI"/>

                <!-- Push-to-talk button -->
                <Border x:Name="TalkButtonBorder" Width="160" Height="160"
                        CornerRadius="80" Cursor="Hand"
                        Background="{StaticResource ButtonBackground}"
                        PreviewMouseLeftButtonDown="OnTalkButtonDown"
                        PreviewMouseLeftButtonUp="OnTalkButtonUp"
                        MouseLeave="OnTalkButtonLeave">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Background="Transparent">
                        <TextBlock x:Name="TalkButtonText" Text="Hold to Talk"
                                   FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextForeground}"
                                   HorizontalAlignment="Center"
                                   FontFamily="Segoe UI"/>
                        <TextBlock x:Name="TalkButtonSubtext" Text="(press and hold)"
                                   FontSize="11" Foreground="{StaticResource TextDimmed}"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"
                                   FontFamily="Segoe UI"/>
                    </StackPanel>
                </Border>

                <!-- Partial transcription (streaming STT live text) -->
                <TextBlock Text="{Binding PartialTranscription}"
                           FontSize="13" Foreground="#888888"
                           FontStyle="Italic"
                           HorizontalAlignment="Center" Margin="0,16,0,0"
                           TextWrapping="Wrap" MaxWidth="400"
                           FontFamily="Segoe UI"/>

                <!-- Processing indicator -->
                <TextBlock x:Name="ProcessingText"
                           Text="Processing..."
                           FontSize="13" Foreground="{StaticResource AccentBrush}"
                           HorizontalAlignment="Center" Margin="0,8,0,0"
                           Visibility="Collapsed"
                           FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Latency breakdown -->
            <Border Grid.Row="1" Background="{StaticResource SidebarBackground}"
                    Padding="16,12" Margin="16,0,16,8" CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="STT" FontSize="10"
                               Foreground="{StaticResource TextDimmed}" HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="LLM" FontSize="10"
                               Foreground="{StaticResource TextDimmed}" HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>
                    <TextBlock Grid.Column="2" Grid.Row="0" Text="TTS" FontSize="10"
                               Foreground="{StaticResource TextDimmed}" HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>
                    <TextBlock Grid.Column="3" Grid.Row="0" Text="TOTAL" FontSize="10"
                               Foreground="{StaticResource TextDimmed}" HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding SttLatency}"
                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"
                               Foreground="{StaticResource TextForeground}" Margin="0,2,0,0"
                               FontFamily="Cascadia Mono, Consolas"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding LlmLatency}"
                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"
                               Foreground="{StaticResource TextForeground}" Margin="0,2,0,0"
                               FontFamily="Cascadia Mono, Consolas"/>
                    <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding TtsLatency}"
                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"
                               Foreground="{StaticResource TextForeground}" Margin="0,2,0,0"
                               FontFamily="Cascadia Mono, Consolas"/>
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding TotalLatency}"
                               FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"
                               Foreground="{StaticResource AccentBrush}" Margin="0,2,0,0"
                               FontFamily="Cascadia Mono, Consolas"/>
                </Grid>
            </Border>

            <!-- Status bar -->
            <Border Grid.Row="2" Background="{StaticResource SidebarBackground}"
                    Padding="12,8" MaxHeight="80">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <TextBlock Text="{Binding StatusText}" FontSize="12"
                               Foreground="{StaticResource TextDimmed}"
                               TextWrapping="Wrap"
                               FontFamily="Cascadia Mono, Consolas"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Separator -->
        <Rectangle Grid.Column="3" Fill="{StaticResource BorderBrush}"/>

        <!-- ============ RIGHT: Pipeline Config ============ -->
        <Grid Grid.Column="4" Background="{StaticResource SidebarBackground}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="12">

                    <TextBlock Text="PIPELINE CONFIG" Style="{StaticResource PanelHeader}" Margin="0,0,0,12"/>

                    <!-- STT Engine Selection -->
                    <TextBlock Text="STT Engine" FontSize="11" Foreground="{StaticResource TextDimmed}"
                               Margin="0,0,0,4" FontFamily="Segoe UI"/>
                    <ComboBox ItemsSource="{Binding SttEngines}"
                              SelectedItem="{Binding SelectedSttEngine}"
                              IsEnabled="{Binding IsInitialized}"/>

                    <!-- Spacer -->
                    <Border Height="12"/>

                    <!-- Voice Selection -->
                    <TextBlock Text="Voice" FontSize="11" Foreground="{StaticResource TextDimmed}"
                               Margin="0,0,0,4" FontFamily="Segoe UI"/>
                    <ComboBox ItemsSource="{Binding Voices}"
                              SelectedItem="{Binding SelectedVoice}"
                              IsEnabled="{Binding IsInitialized}"/>

                    <!-- Spacer -->
                    <Border Height="20"/>

                    <!-- Model info -->
                    <TextBlock Text="MODELS" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextDimmed}" Margin="0,0,0,8"
                               FontFamily="Segoe UI"/>

                    <Border Background="#1E1E1E" CornerRadius="4" Padding="10,8" Margin="0,0,0,6">
                        <StackPanel>
                            <TextBlock Text="STT" FontSize="10" Foreground="{StaticResource TextDimmed}"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="{Binding SelectedSttEngine}" FontSize="13"
                                       Foreground="{StaticResource TextForeground}"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E1E" CornerRadius="4" Padding="10,8" Margin="0,0,0,6">
                        <StackPanel>
                            <TextBlock Text="LLM" FontSize="10" Foreground="{StaticResource TextDimmed}"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="Claude Code" FontSize="13" Foreground="{StaticResource TextForeground}"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="via claude CLI" FontSize="10"
                                       Foreground="{StaticResource TextDimmed}" Margin="0,2,0,0"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E1E" CornerRadius="4" Padding="10,8" Margin="0,0,0,6">
                        <StackPanel>
                            <TextBlock Text="TTS" FontSize="10" Foreground="{StaticResource TextDimmed}"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="Kokoro-82M" FontSize="13" Foreground="{StaticResource TextForeground}"
                                       FontFamily="Segoe UI"/>
                            <TextBlock Text="~82M params  |  KokoroSharp" FontSize="10"
                                       Foreground="{StaticResource TextDimmed}" Margin="0,2,0,0"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>

                    <!-- Spacer -->
                    <Border Height="20"/>

                    <!-- Actions -->
                    <Button Content="Reset Conversation"
                            Command="{Binding ResetCommand}"
                            Style="{StaticResource FlatButton}"
                            HorizontalAlignment="Stretch"/>

                    <!-- Spacer -->
                    <Border Height="20"/>

                    <!-- Custom Dictionary -->
                    <TextBlock Text="CUSTOM DICTIONARY" FontSize="11" FontWeight="SemiBold"
                               Foreground="{StaticResource TextDimmed}" Margin="0,0,0,4"
                               FontFamily="Segoe UI"/>
                    <TextBlock Text="One word per line. Corrects similar-sounding STT output."
                               FontSize="10" Foreground="#606060" Margin="0,0,0,6"
                               TextWrapping="Wrap" FontFamily="Segoe UI"/>
                    <TextBox x:Name="DictionaryTextBox"
                             Text="{Binding DictionaryText, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                             AcceptsReturn="True"
                             Height="120"
                             VerticalScrollBarVisibility="Auto"
                             Background="#1E1E1E"
                             Foreground="{StaticResource TextForeground}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="6,4"
                             FontSize="12"
                             FontFamily="Cascadia Mono, Consolas"/>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
